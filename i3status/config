# General Configuration
general {
        colors = true
        interval = 1
	color_good = "#8ec07c"
        color_degraded = "#fabd2f"
        color_bad = "#fb4934"
}

# Ordering
order += "volume master"
# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
# order += "battery all"
# order += "disk /"
# order += "load"
order += "memory"
order += "tztime local"

# Volume Status
